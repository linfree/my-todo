{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "my-todo",
  "version": "0.1.0",
  "identifier": "com.linfr.my-todo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "My Todo",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "linfr",
    "category": "Productivity",
    "shortDescription": "A simple todo application with reminders",
    "longDescription": "A todo application with task reminders, notifications, and enterprise WeChat integration.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
